<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassChoose" >

    <TextView
        android:id="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="-Barbarian-"
        android:background="@null"
        android:textColor="#4D6DF3"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:text=" Choose "
        android:textColor="#4D6DF3"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/choose"
        android:text="Barbarian description\n" />

    <ImageButton
        android:id="@+id/barbarian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/description"
        android:layout_below="@+id/class_name"
        android:layout_marginRight="36dp"
        android:layout_marginTop="59dp"
        android:src="@drawable/empty" />

    <ImageButton
        android:id="@+id/wizard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/barbarian"
        android:layout_centerHorizontal="true"
        android:src="@drawable/empty" />

    <ImageButton
        android:id="@+id/hunter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/wizard"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/choose"
        android:src="@drawable/empty" />

</RelativeLayout>